{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        /* Emit */
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./types",

        /* Type Checking */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true
    },
    "include": ["src"]
}
